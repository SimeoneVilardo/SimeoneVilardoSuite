.container
    .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            form(data-ajax='true', method='post', data-ajax-mode='replace', data-ajax-target='#body-content', action='/me/recover-username')
                input(type='hidden', name='_csrf', value=_csrf)
                .form-horizontal
                    h4 Recupera username
                    hr
                    .form-group
                        label.col-md-12 Inserisci il tuo indirizzo email
                        label.col-md-12 Riceverai via mail il tuo username
                    .form-group
                        label.control-label.col-md-2(for='email') Indirizzo email:
                        .col-md-10
                            input#email.form-control.text-box.single-line(name='email', type='email')
                    .form-group
                        .col-md-offset-2.col-md-10
                            input.btn.btn-default(type='submit', value='Conferma')
                    include ../alerts.pug
                    +alerts(alert)
script.
    updateBrowserData('Recupera username', '#{url}', #{ajax}, #{back}, #{noUpdate});