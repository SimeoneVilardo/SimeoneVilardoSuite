.container
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      form(action='login', method='post')
        .form-horizontal
          h4 Login
          hr
          .form-group
            label.control-label.col-md-2(for='Username') Username
            .col-md-10
              input#Username.form-control.text-box.single-line(name='username', type='text')
          .form-group
            label.control-label.col-md-2(for='Password') Password
            .col-md-10
              input#Password.form-control.text-box.single-line.password(name='password', type='password')
          .form-group
            .col-md-offset-2.col-md-10
              input.btn.btn-default(type='submit', value='Accedi')
          if passportMessage
            .alert.alert.danger #{passportMessage}
script.
  updateBrowserData('Login', '#{url}', #{ajax}, #{back}, #{noUpdate});